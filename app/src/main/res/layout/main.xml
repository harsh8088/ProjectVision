<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.hrawat.projectvision.faceDetection.camera_util.CameraSourcePreview
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.hrawat.projectvision.faceDetection.camera_util.GraphicOverlay
                android:id="@+id/faceOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.hrawat.projectvision.faceDetection.camera_util.CameraSourcePreview>
    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_sunglasses_clear"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@drawable/ic_sunglasses_clear"
            />

        <ImageView
            android:layout_marginLeft="8dp"
            android:id="@+id/img_sunglasses"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@drawable/ic_sunglasses"
            />
    </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
